                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector_white_button"
                    android:onClick="horaChange"
                    android:text="@string/hora_default"
                    android:textColor="@drawable/selector_orange_text_button" />
                <CheckBox
                   android:id="@+id/check_hora"
                   android:layout_width="match_parent"
                   android:visibility="invisible"
                   android:layout_height="5dp"
                   android:layout_alignStart="@+id/hora_buttom"
                   android:layout_below="@+id/hora_buttom"
                   android:text="@string/not_info" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/quantidade_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/quantidade_edit_text"
                    android:layout_marginTop="15dp"
                    android:text="@string/quantidade_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/quantidade_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/quantidade_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_gray_edit_text"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black" />

                <!--  <CheckBox
                      android:id="@+id/check_quantidade"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignStart="@+id/quantidade_edit_text"
                      android:layout_below="@+id/quantidade_edit_text"
                      android:text="@string/not_info" />-->
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/code_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/code_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/code_edit_text"
                    android:layout_marginTop="15dp"
                    android:text="@string/lote_code"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/code_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/code_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_full_white_edit_text"
                    android:paddingTop="10dp"
                    android:text="@string/default_lote"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/corpo_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/corpo_list"
                    android:layout_marginTop="15dp"
                    android:text="@string/corpo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignEnd="@+id/corpo_list"
                    android:layout_centerHorizontal="true"
                    android:onClick="addCorpo"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:background="@drawable/ic_plus_circle_outline_black_18dp"/>
                <ListView
                    android:id="@+id/corpo_list"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/corpo_text_view"
                    android:background="@drawable/rounded_full_white_edit_text"
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    >


                </ListView>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/more_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                    android:layout_alignStart="@+id/more_edit_text"
                    android:layout_marginTop="15dp"
                    android:text="@string/more_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/more_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/more_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_gray_edit_text"
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/data_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/more_edit_text"
                    android:layout_alignStart="@+id/more_edit_text"
                    android:layout_below="@+id/more_edit_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_orange_button"
                    android:onClick="loteCreate"
                    android:text="@string/lote_create"
                    android:textColor="@drawable/selector_white_text_button"

                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

